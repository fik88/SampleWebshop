<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm layout="ResponsiveGridLayout" title="{i18n>xtit.newOrder}" editable="true">
			<Label text="{i18n>xlbl.soldto}"/>
			<Select id="soldto" showSecondaryValues="true" items="{ path: '/Sold_ToSet', sorter: { path: 'Sold_To_Name' } }" maxWidth="200px">
				<core:ListItem key="{Sold_To_Id}" text="{Sold_To_Name}" additionalText="{Sold_To_Id}"/>
			</Select>
			<Label text="{i18n>xlbl.shipto}"/>
			<Select id="shipto" showSecondaryValues="true" items="{ path: '/Ship_ToSet', sorter: { path: 'Ship_To_Name' } }" maxWidth="200px">
				<core:ListItem key="{Ship_To_Id}" text="{Ship_To_Name}" additionalText="{Ship_To_Id}"/>
			</Select>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>